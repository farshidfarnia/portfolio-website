---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Contact | Farshid Farnia">
  <section class="py-12 md:py-20 dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-8 text-center dark:text-gray-100">Get In Touch</h1>
      
      <div class="max-w-5xl mx-auto">
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Contact Information -->
          <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-md border border-gray-100 dark:border-gray-700">
            <h2 class="text-2xl font-bold mb-6 dark:text-gray-100">Contact Information</h2>
            
            <div class="space-y-4">
              <div class="flex items-start">
                <div class="bg-violet-100 dark:bg-gray-700 p-3 rounded-full mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-violet-600 dark:text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold dark:text-gray-200">Location</h3>
                  <p class="text-gray-600 dark:text-gray-400">Cologne, Germany</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="bg-violet-100 dark:bg-gray-700 p-3 rounded-full mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-violet-600 dark:text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold dark:text-gray-200">Email</h3>
                  <p class="text-gray-600 dark:text-gray-400">farshid.farnia@gmail.com</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="bg-violet-100 dark:bg-gray-700 p-3 rounded-full mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-violet-600 dark:text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold dark:text-gray-200">Phone</h3>
                  <p class="text-gray-600 dark:text-gray-400">+491627642708</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="bg-violet-100 dark:bg-gray-700 p-3 rounded-full mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-violet-600 dark:text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold dark:text-gray-200">LinkedIn</h3>
                  <a 
                    href="https://www.linkedin.com/in/farshid-farnia/" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="text-violet-600 dark:text-violet-400 hover:underline"
                  >
                    linkedin.com/in/farshid-farnia
                  </a>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Contact Form -->
          <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-md border border-gray-100 dark:border-gray-700">
            <h2 class="text-2xl font-bold mb-6 dark:text-gray-100">Send a Message</h2>
            
            <form action="mailto:farshid.farnia@gmail.com" method="POST" enctype="text/plain">
              <div class="mb-4">
                <label for="name" class="block text-gray-700 dark:text-gray-300 mb-2">Name</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-violet-500 dark:focus:ring-violet-600 dark:bg-gray-700 dark:text-white"
                  required
                />
              </div>
              
              <div class="mb-4">
                <label for="email" class="block text-gray-700 dark:text-gray-300 mb-2">Email</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-violet-500 dark:focus:ring-violet-600 dark:bg-gray-700 dark:text-white"
                  required
                />
              </div>
              
              <div class="mb-4">
                <label for="subject" class="block text-gray-700 dark:text-gray-300 mb-2">Subject</label>
                <input 
                  type="text" 
                  id="subject" 
                  name="subject" 
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-violet-500 dark:focus:ring-violet-600 dark:bg-gray-700 dark:text-white"
                  required
                />
              </div>
              
              <div class="mb-6">
                <label for="message" class="block text-gray-700 dark:text-gray-300 mb-2">Message</label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="5" 
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-violet-500 dark:focus:ring-violet-600 dark:bg-gray-700 dark:text-white"
                  required
                ></textarea>
              </div>
              
              <button 
                type="submit" 
                class="w-full bg-violet-600 dark:bg-violet-700 text-white py-3 px-4 rounded-lg font-medium hover:bg-violet-700 dark:hover:bg-violet-800 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500 dark:focus:ring-offset-gray-900"
              >
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout> 